<h1>You Are Logged In <%= @user.username%></h1>

<%= link_to "Sign Out", destroy_user_session_path %>
<br>
<br>
<div id="tweet_create">
<%= form_for [@user,@tweet], :method=>:post, :remote=>true do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

<%= render :partial=>"tweet" %>
